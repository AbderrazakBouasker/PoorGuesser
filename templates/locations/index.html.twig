{% extends 'base.html.twig' %}

{% block title %}Locations index{% endblock %}

{% block body %}
    <h1>Locations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cord_x</th>
                <th>Cord_y</th>
                <th>Country</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.cordX }}</td>
                <td>{{ location.cordY }}</td>
                <td>{{ location.country }}</td>
                <td>{{ location.city }}</td>
                <td>
                    <a href="{{ path('app_locations_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('app_locations_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_locations_new') }}">Create new</a>
{% endblock %}
